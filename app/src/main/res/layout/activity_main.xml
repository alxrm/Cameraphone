<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.rm.cameraphone.MainActivity">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.rm.cameraphone.components.CaptureWrapper
        android:id="@+id/camera_capture_wrapper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <com.rm.cameraphone.components.CaptureButton
            android:id="@+id/camera_capture_button"
            android:layout_width="86dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"/>

    </com.rm.cameraphone.components.CaptureWrapper>

    <com.rm.cameraphone.components.StartView
        android:id="@+id/camera_waiter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
