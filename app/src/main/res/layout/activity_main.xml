<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <com.rm.cameraphone.components.CaptureWrapper
        android:id="@+id/camera_capture_wrapper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <com.rm.cameraphone.components.CaptureButton
            android:id="@+id/camera_capture_button"
            android:layout_width="86dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            />

        <com.rm.cameraphone.components.CameraSwitchButton
            android:id="@+id/camera_switch_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

    </com.rm.cameraphone.components.CaptureWrapper>

    <include
        layout="@layout/box_preview_overlay"
        android:id="@+id/camera_preview_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/camera_capture_wrapper"
        />

</RelativeLayout>
