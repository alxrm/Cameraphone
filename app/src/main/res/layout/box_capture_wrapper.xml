<?xml version="1.0" encoding="utf-8"?>
<com.rm.cameraphone.components.camera.CaptureWrapper
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <com.rm.cameraphone.components.camera.CaptureButton
        android:id="@+id/camera_capture_button"
        android:layout_width="86dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        />

    <com.rm.cameraphone.components.camera.CameraSwitcher
        android:id="@+id/camera_switcher"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <ImageView
        android:id="@+id/camera_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:scaleType="centerInside"
        android:clickable="true"
        android:scaleX="0"
        android:scaleY="0"
        android:visibility="gone"
        android:src="@drawable/icon_btn_cancel"
        />

    <ImageView
        android:id="@+id/camera_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:scaleType="centerInside"
        android:clickable="true"
        android:scaleX="0"
        android:scaleY="0"
        android:visibility="gone"
        android:src="@drawable/icon_btn_done"
        />

    <ImageView
        android:id="@+id/camera_btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/crop"
        android:visibility="gone"
        android:alpha="0"
        />

</com.rm.cameraphone.components.camera.CaptureWrapper>